<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="reserve_scanner_form">
        <field name="model">stock_scanner.reserve_scanner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="scanner_hardware_id"
                               options="{'no_open': True, 'no_create': True, 'no_quick_create':True}"
                        />
                        <field name="action" invisible="1"/>
                    </group>
                    <group>
                        <field name="stock_picking_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="button_do_action"
                            string="Do action"
                            type="object"
                            class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="reserve_scanner_action_window">
        <field name="name">Scanner wizard</field>
        <field name="res_model">stock_scanner.reserve_scanner</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>